{
  "name": "event-manager",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "email": "rytis.grincevicius@gmail.com",
    "name": "Rytis Grincevicius",
    "url": "https://github.com/grinry"
  },
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "yarn run prepare-build-dir && yarn run build:server && yarn build:client",
    "build:server": "rm -rf ./dist && yarn prepare-build-dir && ttsc -p tsconfig.json",
    "build:client": "webpack --config webpack.config.js",
    "watch:server": "cross-env NODE_ENV=development nodemon ./src/index.ts",
    "watch:client": "cross-env NODE_ENV=development webpack --config webpack.config.js --watch",
    "test": "cross-env NODE_ENV=test nyc mocha -r ts-node/register -r tsconfig-paths/register --file ./tests/setup.ts --recursive 'tests/**/*.test.ts' --exit",
    "coverage": "nyc report --reporter=cobertura --reporter=lcov --reporter=text",
    "prepare-build-dir": "mkdir -p dist/resources && cp -r ./src/resources/views/ ./dist/resources/views && cp -r ./src/resources/lang/ ./dist/resources/lang",
    "migration:up": "node ./migrate.js up",
    "migration:down": "node ./migrate.js down",
    "migration:make": "node ./migrate.js make",
    "docs": "typedoc",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn watch:server\" \"webpack --config webpack.config.js --watch\""
  },
  "engines": {
    "node": "^10.16.3"
  },
  "dependencies": {
    "@sentry/integrations": "^5.6.1",
    "@sentry/node": "5.6.2",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "content-filter": "^1.1.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "handlebars": "^4.5.3",
    "helmet": "^3.20.0",
    "http-status": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "mysql2": "^1.6.5",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.16.0",
    "sequelize-cli": "^5.5.0",
    "sequelize-typescript": "^1.0.0",
    "slugify": "^1.3.4",
    "sqlite3": "^4.1.0",
    "umzug": "^2.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "7.1.1",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-handlebars": "^0.0.33",
    "@types/handlebars": "^4.1.0",
    "@types/helmet": "^0.0.44",
    "@types/http-status": "^0.2.30",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/method-override": "^0.0.31",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.8",
    "@types/umzug": "^2.2.2",
    "@types/validator": "^10.11.3",
    "autoprefixer": "^9.6.1",
    "chai": "^4.2.0",
    "chai-as-promised": "7.1.1",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.1",
    "css-loader": "^3.2.0",
    "extract-loader": "^3.1.0",
    "file-loader": "^4.2.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "sass-loader": "^8.0.0",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.3.0",
    "ts-transformer-imports": "^0.4.3",
    "tsconfig-paths": "^3.8.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "^1.5.7",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "url-loader": "^2.1.0",
    "webpack": "^4.40.1",
    "webpack-cli": "^3.3.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
