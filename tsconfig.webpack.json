{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./dist/public/assets/js",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "plugins": [
      { "transform": "ts-transformer-imports" }
    ],
    "baseUrl": "./src/resources/js",
    "paths": {
      "~app/*": [
        "*"
      ]
    }
  },
  "include": [
    "./src/resources/**/*"
  ],
  "files": [
    "./src/resources/custom.d.ts"
  ]
}
