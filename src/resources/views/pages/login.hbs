                    <div class="field">
                        <label class="label">Username</label>
                        <div class="control has-icons-left has-icons-right">
                            <input class="input" type="text" placeholder="Your username" value="">
                            <span class="icon is-small is-left"><i class="fas fa-user"></i></span>
                            <span class="icon is-small is-right"><i class="fas fa-check"></i></span>
                        </div>
                        <!--                    <p class="help is-success">This username is available</p>-->
                    </div>
                    <div class="field">
                        <label class="label">Password</label>
                        <div class="control has-icons-left has-icons-right">
                            <input class="input" type="password" placeholder="Password" value=""><!-- is-success -->
                            <span class="icon is-small is-left"><i class="fas fa-lock"></i></span>
                            <!--                        <span class="icon is-small is-right"><i class="fas fa-check"></i></span>-->
                        </div>
                        <!--                    <p class="help is-success">This username is available</p>-->
                    </div>
                    <div class="level">
                        <div class="level-left">
                            <div class="field is-grouped">
                                <div class="control">
                                    <button type="submit" class="button is-primary">Sign in</button>
                                </div>
                                <div class="control">
                                    <a class="button is-text" href="/register">Create account</a>
                                </div>
                            </div>
                        </div>
                        <div class="level-right">
                            <div class="field">
                                <div class="control is-pulled-right level-right">
                                    <a class="button is-text" href="/remind-password">Forgot Password?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
